<div class="jumbo-container">
  <div class="jumbotron">
  <div class="container">
    <h1>Safe Bet is your best bet.</h1>
      <p>Review the stats. Place your bets. Collect the karma!</p>
      {{#unless this.user.username}}
      <p><a class="btn btn-primary btn-lg" href="/sign-in" role="button">Sign In</a></p>
      {{/unless}}
  </div>
</div>
</div>

{{#if this.user.username}}
<div class="jumbo-container">
  <div class="jumbotron">
  <div class="container">
    <h3>User: {{this.user.username}}        Karma: {{this.user.karma}}</h3>
  </div>
</div>
</div>
{{/if}}

<div class="main-container">

<h1>UNCLAIMED BETS</h1>

{{#each bets}}
	{{#unless this.karma_received}}
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<h3 id=unclaimed>{{this.Match.fighter}} over {{this.Match.opponent}}: {{this.Match.result}}</h3>
			<br>
			<h3>{{this.amount}}</h3>
		</div>
		<div class="col-md-2">
			<form action="/karma/{{this.id}}" method="POST">
		    	<button type="submit" class="btn btn-primary">Claim Karma</button>
		    </form>
		    <form action="/delete/{{this.id}}" method="POST">
		    	<button type="submit" class="btn btn-primary">Delete Bet</button>
		    </form>
		</div>
	</div>
	{{/unless}}
{{/each}}

<h1>CLAIMED BETS</h1>

{{#each bets}}
	{{#if this.karma_received}}
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<h3 id=claimed>{{this.Match.fighter}} over {{this.Match.opponent}}: {{this.Match.result}}</h3>
			<br>
			<h3>{{this.amount}}</h3>
		</div>
		<div class="col-md-2">
		    <form action="/clear/{{this.id}}" method="POST">
		    	<button type="submit" class="btn btn-primary">Clear Bet</button>
		    </form>
		</div>
	</div>
	{{/if}}
{{/each}}

</div>