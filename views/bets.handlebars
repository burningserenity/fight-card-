<div class="jumbo-container">
  <div class="jumbotron">
  <div class="container">
    <h1>Safe Bet is your best bet.</h1>
      <p>Review the stats. Place your bets. Collect the karma!</p>
      <p><a class="btn btn-primary btn-lg" href="/sign-in" role="button">Sign In</a></p>
  </div>
</div>
</div>

<div class="main-container">

<h1>User: {{this.user.username}}  Karma: {{this.user.karma}}</h1>

<h1>UNCLAIMED BETS</h1>

{{#each bets}}
	{{#unless this.karma_received}}
	<div class="row">
		<div class="col-md-10">
			<h3>{{this.Match.fighter}} over {{this.Match.opponent}}: {{this.Match.result}}</h3>
			<br>
			<h3>{{this.amount}}</h3>
		</div>
		<div class="col-md-2">
			<form action="/karma/{{this.id}}" method="POST">
		    	<button type="submit" class="btn btn-primary">Claim Karma</button>
		    </form>
		</div>
	</div>
	{{/unless}}
{{/each}}

<h1>CLAIMED BETS</h1>

{{#each bets}}
	{{#if this.karma_received}}
	<div class="row">
		<div class="col-md-12">
			<h3>{{this.Match.fighter}} over {{this.Match.opponent}}: {{this.Match.result}}</h3>
			<br>
			<h3>{{this.amount}}</h3>
		</div>
	</div>
	{{/if}}
{{/each}}

</div>