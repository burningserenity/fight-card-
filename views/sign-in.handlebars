{{#if this.user.username}}
<div class="jumbo-container">
  <div class="jumbotron">
  <div class="container">
    <h3>User: {{this.user.username}}        Karma: {{this.user.karma}}</h3>
  </div>
</div>
</div>
{{/if}}

<div class="row">
  <div class="col-md-offset-3 col-md-6">
<div id="sign-in-container">
	<h2>Sign In</h2>
 	<p class="subtext">It's easy! Create a username to begin placing bets and collecting karma. You'll also be able to review your past bets and track your fights.</p>
  <form class="form-inline" id="sign-in-form" action="/authenticate" method="POST">
    <div class="form-group mx-sm-3">
      <label for="inputUsername" class="sr-only">Username</label>
      <input type="text" class="form-control form-control-lg" id="inputUsername" placeholder="Enter Username" name="username">
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>


</div>
</div>
</div>



