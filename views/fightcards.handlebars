<div class="jumbo-container">
  <div class="jumbotron">
  <div class="container">
    <h1>Safe Bet is your best bet.</h1>
      <p>Review the stats. Place your bets. Collect the karma!</p>
      {{#unless this.user.username}}
      <p><a class="btn btn-primary btn-lg" href="/sign-in" role="button">Sign In</a></p>
      {{/unless}}
  </div>
</div>
</div>

{{#if this.user.username}}
<div class="jumbo-container">
  <div class="jumbotron">
  <div class="container">
    <h3>User: {{this.user.username}}        Karma: {{this.user.karma}}</h3>
  </div>
</div>
</div>
{{/if}}

<div class="main-container">

<h1>OPEN FIGHTCARDS</h1>

{{#each events}}
	{{#if this.accepting_bets}}
	<div class="row">
		<div class="col-md-10">
			<h3>{{this.event_name}}</h3>
			<br>
			<h5>{{this.date}}; {{this.venue}}; {{this.location}}</h5>
		</div>
		<div class="col-md-2">
			<a href="/matches/{{this.id}}/{{this.Matches.0.id}}">View Fights</a>
		</div>
	</div>
	{{/if}}
{{/each}}

<h1>PAST FIGHTCARDS</h1>

{{#each events}}
	{{#unless this.accepting_bets}}
	<div class="row">
		<div class="col-md-10">
			<h3>{{this.event_name}}</h3>
			<br>
			<h5>{{this.date}}; {{this.venue}}; {{this.location}}</h5>
		</div>
	</div>
	{{/unless}}
{{/each}}

</div>